# Environment Variables for Self-Hosted GoRules Studio
# Copy this file to .env and fill in your values

# ============================================================================
# GitHub/GitLab Integration
# ============================================================================
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
# Or for GitLab:
# GITLAB_TOKEN=glpat_your_gitlab_token_here

# ============================================================================
# Keycloak (SSO)
# ============================================================================
KEYCLOAK_ADMIN_PASSWORD=change_this_secure_password_123
OIDC_CLIENT_SECRET=gorules-studio-client-secret-change-me

# ============================================================================
# Grafana
# ============================================================================
GRAFANA_PASSWORD=change_this_grafana_password_123
GRAFANA_OAUTH_SECRET=grafana-oauth-secret-change-me

# ============================================================================
# Database
# ============================================================================
POSTGRES_PASSWORD=change_this_postgres_password_123

# ============================================================================
# SSL Certificates (if using HTTPS)
# ============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ============================================================================
# Domain Names
# ============================================================================
GORULES_DOMAIN=rules.company.com
BRE_PLATFORM_DOMAIN=bre-api.company.com
KEYCLOAK_DOMAIN=auth.company.com
GRAFANA_DOMAIN=monitoring.company.com

# ============================================================================
# SMTP (for email notifications)
# ============================================================================
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USER=notifications@company.com
SMTP_PASSWORD=smtp_password_here
SMTP_FROM=bre-platform@company.com
